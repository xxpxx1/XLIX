<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="#000000"
android:padding="16dp">

<!-- XLIX Logo at Top -->
<ImageView
    android:id="@+id/logoImageView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:src="@drawable/logo_xlix"
    android:contentDescription="XLIX Logo"
    android:layout_marginTop="32dp"
    android:layout_marginBottom="24dp" />

<!-- Grid of App Switches -->
<GridLayout
    android:id="@+id/switchGrid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="3"
    android:alignmentMode="alignMargins"
    android:useDefaultMargins="true">

    <!-- WhatsApp -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_whatsapp"
            android:contentDescription="WhatsApp Icon"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="WhatsApp"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/switchWhatsapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumbTint="@color/switch_thumb_selector"
            android:trackTint="@color/switch_track_selector" />
    </LinearLayout>

    <!-- TikTok -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_tiktok"
            android:contentDescription="TikTok Icon"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TikTok"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/switchTikTok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumbTint="@color/switch_thumb_selector"
            android:trackTint="@color/switch_track_selector" />
    </LinearLayout>

    <!-- Instagram -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_instagram"
            android:contentDescription="Instagram Icon"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Instagram"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/switchInstagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumbTint="@color/switch_thumb_selector"
            android:trackTint="@color/switch_track_selector" />
    </LinearLayout>

    <!-- Facebook -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_facebook"
            android:contentDescription="Facebook Icon"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Facebook"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/switchFacebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumbTint="@color/switch_thumb_selector"
            android:trackTint="@color/switch_track_selector" />
    </LinearLayout>

    <!-- YouTube -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_youtube"
            android:contentDescription="YouTube Icon"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="YouTube"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/switchYouTube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumbTint="@color/switch_thumb_selector"
            android:trackTint="@color/switch_track_selector" />
    </LinearLayout>

</GridLayout>

</LinearLayout>
